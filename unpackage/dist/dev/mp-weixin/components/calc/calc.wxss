 .u-number-box {
  height: 100rpx !important;
}
.section {
  background: #fff;
  margin-bottom: 18rpx;
  padding: 0 18rpx 40rpx;
}
.section .title {
  padding: 32rpx 10rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #000000;
}
.type-list {
  white-space: nowrap;
}
.type-list .item {
  display: inline-block;
  width: 138rpx;
  height: 172rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 10rpx 0 rgba(96, 202, 130, 0.29);
  border-radius: 12rpx;
  opacity: 1;
  margin: 24rpx 7rpx;
  text-align: center;
  font-size: 28rpx;
  color: #606060;
  line-height: 1.2;
  box-sizing: border-box;
}
.type-list .cur {
  color: #3BB061;
  border: 1rpx solid #3BB061;
}
.type-list image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 12rpx;
}
.types {
  display: flex;
  flex-wrap: wrap;
  margin-top: 40rpx;
}
.types .item {
  width: 100%;
  font-size: 28rpx;
  font-weight: 500;
  height: 84rpx;
  border-radius: 12rpx;
  border: 1rpx solid #DFDFDF;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
  margin-top: 12rpx;
}
.types .item view {
  color: #979797;
}
.types .cur {
  border: 4rpx solid #0F7B32;
}
.types .cur view {
  color: #0F7B32;
}
.calc {
  display: flex;
  margin-top: 48rpx;
}
.calc .text-1 {
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  color: #979797;
  margin-bottom: 10rpx;
}
.calc .icon {
  padding: 0 18rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #000000;
  align-self: flex-end;
  margin-bottom: 22rpx;
}
.calc .u-border {
  border-color: #000 !important;
}
.calc .uni-input-input {
  text-align: center;
}
.calc .uni-input-placeholder {
  text-align: center;
}
.btn {
  width: 304rpx;
  margin: 32rpx auto 0;
  line-height: 84rpx;
}
.list .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: left;
  height: 80rpx;
  background: #F6F6F6;
  border-radius: 12rpx;
  padding: 0 24rpx;
  margin-bottom: 8rpx;
}
.list .item .w {
  width: 25%;
  margin-left: 10rpx;
}
.list .item view {
  font-size: 28rpx;
  font-weight: 400;
  color: #606060;
}
.list .item-1 {
  background: #fff;
}
.list .item-1 view {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
}
.btn-1 {
  margin: 0;
  width: 244rpx;
  line-height: 76rpx;
  background: #3BB061;
}

