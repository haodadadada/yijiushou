.success-popup {
  width: 604rpx;
  height: 558rpx;
  position: relative;
}
.success-popup image {
  width: 604rpx;
  height: 558rpx;
}
.success-popup .text {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  text-align: center;
}
.success-popup .text-1 {
  font-size: 30rpx;
  font-weight: 400;
  color: #222222;
  margin-top: 320rpx;
}
.success-popup .text .btn {
  text-align: center;
  width: 316rpx;
  height: 88rpx;
  background: #E9FFF0;
  border-radius: 88rpx;
  border: 2rpx solid #9EE3C3;
  padding: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 60rpx auto 0;
}
.success-popup .text .btn view {
  color: #fff;
  background: #3BB061;
  width: 100%;
  height: 100%;
  border-radius: 88rpx;
  line-height: 88rpx;
}

