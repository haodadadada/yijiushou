.map {
  width: 100%;
  height: 588rpx;
}
.address {
  border-radius: 16rpx;
  margin-top: -16rpx;
  padding: 32rpx 0;
}
.address .icon {
  width: 31rpx;
  height: 37rpx;
  min-width: 31rpx;
  margin-right: 20rpx;
}
.user {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.user .icon {
  font-size: 24rpx;
  color: #3bb061;
  text-align: center;
}
.user .icon image {
  width: 40rpx;
  height: 40rpx;
}
.border-b {
  border-bottom: 1rpx solid #efefef;
}
.type-list {
  white-space: nowrap;
}
.type-list .item {
  display: inline-block;
  width: 138rpx;
  height: 172rpx;
  background: #ffffff;
  box-shadow: 0px 0px 10rpx 0 rgba(96, 202, 130, 0.29);
  border-radius: 12rpx;
  margin: 24rpx 7rpx;
  text-align: center;
  font-size: 28rpx;
  color: #606060;
  line-height: 1.2;
  box-sizing: border-box;
}
.type-list .cur {
  color: #3bb061;
  border: 4rpx solid #3bb061;
}
.type-list image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 12rpx;
}
.weight-list {
  display: flex;
  flex-wrap: wrap;
}
.weight-list .item {
  margin-bottom: 14rpx;
  text-align: center;
  font-size: 30rpx;
  color: #c4c4c4;
  width: 216rpx;
  line-height: 80rpx;
  background: #ffffff;
  border-radius: 16rpx;
  border: 2rpx solid #c4c4c4;
}
.weight-list .item:not(:nth-child(3n)) {
  margin-right: 12rpx;
}
.weight-list .cur {
  color: #3bb061;
  border: 2rpx solid #3bb061;
}
.btn-group {
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0;
}
.btn-group .btn {
  width: 320rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #ffffff;
  line-height: 88rpx;
}
.btn-group .btn-1 {
  background: #f3f3f3;
  color: #666666;
}
.btn-group .btn-1:after {
  border: 0;
}
.btn-group .btn-2 {
  background: #0b8f3a;
}
.empty {
  text-align: center;
  margin: 100rpx auto 120rpx;
}
.empty image {
  width: 196rpx;
  height: 196rpx;
  margin-bottom: 36rpx;
}
.empty view {
  font-size: 28rpx;
  font-weight: 400;
  color: #c4c4c4;
}
.card .item {
  background: #fff;
  padding: 28rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
}
.card .item .address {
  display: flex;
}
.card .item .address .icon {
  margin-top: 4rpx;
}
.card .item .icon {
  min-width: 32rpx;
  width: 32rpx;
  height: 32rpx;
}
.card .item .radio {
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
}
.btn-3 {
  width: 700rpx;
  margin: 0 auto 30rpx;
}

