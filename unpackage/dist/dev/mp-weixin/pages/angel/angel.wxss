.tab {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  z-index: 100;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
}
.tab .item {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #979797;
}
.tab .cur {
  color: #fff;
  background: #02613E;
}
.section {
  padding: 0 0 40rpx;
}
.section .title {
  font-size: 30rpx;
  font-weight: 500;
  color: #222222;
  padding: 40rpx 40rpx 26rpx;
}
.section .id-card {
  padding: 0 40rpx 18rpx;
}
.section .id-card .card {
  border-radius: 12rpx;
}
.section .id-card .card image {
  width: 308rpx;
  height: 184rpx;
  padding: 20rpx 10rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
}
.section .id-card .card view {
  text-align: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #979797;
  margin-top: 20rpx;
}
.section .input-group {
  background: #fff;
  margin-bottom: 20rpx;
}
.section .input-group .insuranceimage {
  width: 300rpx;
  height: 200rpx;
  margin-left: 40rpx;
  margin-top: 20rpx;
}
.section .input-group .item {
  display: flex;
  align-items: center;
  min-height: 116rpx;
  border-bottom: 1rpx solid #F6F6F6;
  padding: 0 42rpx;
  position: relative;
}
.section .input-group .item .label {
  width: 240rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #222222;
}
.section .input-group .item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}
.section .input-group .item .uni-input {
  flex: 1;
  width: 100%;
}
.section .input-group .item .icon {
  position: absolute;
  right: 40rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.section .input-group .flex-start {
  display: flex;
  align-items: flex-start;
}
.section .input-group .flex-start .label {
  margin-top: 18rpx;
}
.section .input-group .flex-start .u-textarea {
  padding: 18rpx 0;
}
.section .input-group-1 .item .label {
  width: 140rpx;
}
.section .btn {
  width: 524rpx;
  line-height: 96rpx;
  margin: 20rpx auto;
}

