page {
  background-color: #fff;
}
.map {
  width: 100%;
  height: 588rpx;
}
.address {
  border-radius: 16rpx;
  margin-top: -16rpx;
  padding: 32rpx 0;
}
.address .icon {
  width: 32rpx;
  height: 32rpx;
}
.content {
  width: 100%;
  margin-top: 20rpx;
}
.content .addAddress {
  width: 80%;
  margin-left: 10%;
  height: 80rpx;
  background-color: #eabd66;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #ffffff;
  line-height: 80rpx;
  text-align: center;
}
.content .icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 30rpx;
}
.content .input {
  margin: 0 20rpx;
  padding: 0 20rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #999999;
  border-bottom: 2rpx solid #ededed;
  background: #fff;
  position: relative;
}
.content .input .sex {
  display: flex;
  margin: 20rpx 0;
}
.content .input .sex .item {
  font-size: 32rpx;
  color: #C4C4C4;
  width: 128rpx;
  line-height: 72rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 12rpx;
  border: 1rpx solid #C4C4C4;
  margin-right: 32rpx;
}
.content .input .sex .cur {
  color: #3BB061;
  border: 1rpx solid #3BB061;
}
.content .input text {
  font-size: 30rpx;
  width: 170rpx;
  min-width: 170rpx;
  color: #222;
}
.content .input .text-1 {
  padding-right: 50rpx;
  line-height: 1.6;
  margin: 10rpx 0;
}
.content .input input {
  font-size: 28rpx;
  color: #999999;
}
.content .input1 {
  width: 90%;
  height: 100rpx;
  margin-left: 5%;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #999999;
  border-bottom: 2rpx solid #ededed;
}
.content .input1 text {
  font-size: 30rpx;
}
.content .input1 input {
  font-size: 28rpx;
  color: #999999;
}
.option-item {
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn {
  margin: 0 auto;
}

