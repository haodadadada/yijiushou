<view class="content pb-30"><view class="input"><text>联系人</text><input type="text" value="{{userName}}" placeholder="请输入联系人姓名" data-event-opts="{{[['input',[['__set_model',['','userName','$event',[]]]]]]}}" bindinput="__e"/></view><view class="input"><text>性别</text><block wx:for="{{sexList}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><view class="sex"><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" data-event-params="{{({item})}}" class="{{['item',(gender==item.id)?'cur':'']}}" bindtap="__e">{{item.name}}</view></view></block></view><view class="input"><text>手机号码</text><input type="text" value="{{userPhone}}" placeholder="请输入手机号码" data-event-opts="{{[['input',[['__set_model',['','userPhone','$event',[]]]]]]}}" bindinput="__e"/></view><view data-event-opts="{{[['tap',[['toggleCommunitySelection',['$event']]]]]}}" class="input" bindtap="__e"><text>社区信息</text><input placeholder="请输入社区" data-event-opts="{{[['input',[['__set_model',['','areaName','$event',[]]],['searchCommunity',['$event']]]]]}}" value="{{areaName}}" bindinput="__e"/><view data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" class="icon" bindtap="__e"></view></view><block wx:if="{{isCommunitySelectionOpen}}"><view class="community-options"><block wx:for="{{communityOptions}}" wx:for-item="option" wx:for-index="__i1__" wx:key="id"><view data-event-opts="{{[['tap',[['selectCommunity',['$0'],[[['communityOptions','id',option.id]]]]]]]}}" class="option-item" bindtap="__e">{{''+option.community+''}}</view></block></view></block><view class="input"><text>详细地址</text><input type="text" value="{{address}}" placeholder="例:xx号xx楼xx门牌" data-event-opts="{{[['input',[['__set_model',['','address','$event',[]]]]]]}}" bindinput="__e"/></view><block wx:if="{{id}}"><view data-event-opts="{{[['tap',[['edit',['$event']]]]]}}" class="btn" bindtap="__e">确认修改</view></block><block wx:else><view data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" class="btn" bindtap="__e">保存地址</view></block></view>