.tabs {
  display: flex;
  justify-content: space-around;
  background: #fff;
}
.tabs .item {
  font-size: 30rpx;
  color: #606060;
  line-height: 68rpx;
  padding: 0 100rpx;
  margin: 20rpx 0;
}
.tabs .cur {
  color: #fff;
  line-height: 68rpx;
  background: #0B8F3A;
  border-radius: 20rpx;
}
.item-1 {
  background: url(https://youjin.phpcaff.cn/uploads/20220503/660b6cf8fd033264926841940f68af46.png) no-repeat #08846F;
  background-size: contain;
  min-height: 100vh;
}
.card {
  position: relative;
  padding-top: 1rpx;
}
.card .avatar {
  width: 144rpx;
  height: 144rpx;
  box-shadow: 0px 8rpx 8rpx 2rpx rgba(124, 124, 124, 0.25);
  border-radius: 100%;
  margin: 50rpx auto;
  display: block;
}
.qrcode {
  width: 660rpx;
  height: 620rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 460rpx auto 0;
  text-align: center;
}
.qrcode .qr-pic {
  width: 284rpx;
  height: 284rpx;
  background: #FFFFFF;
  border: 1px solid #707070;
  display: block;
  margin: 0 auto;
}
.qrcode .logo {
  width: 251rpx;
  height: 64rpx;
  padding: 50rpx 0 40rpx;
}
.qrcode view {
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 5rpx;
}
.btn-wrap {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #fff;
}
.btn-wrap .item {
  line-height: 98rpx;
  width: 375rpx;
  min-width: 375rpx;
  text-align: center;
  font-size: 30rpx;
  color: #000000;
  padding-left: 0;
  padding-right: 0;
  margin-left: 0;
  margin-right: 0;
}
.btn-wrap .btn-2 {
  background: #0B8F3A;
}
.btn-wrap .btn-2 view {
  color: #fff;
}
.btn-wrap .item:after {
  border: none;
}
.record {
  margin: 30rpx;
}
.record .header {
  background-image: url(https://youjin.phpcaff.cn/uploads/20220503/b097bad01b4a16e1871db89222bf5cc3.png);
  text-align: center;
  background-size: 100% 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.record .header .num {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
}
.record .header .title {
  font-size: 28rpx;
  color: #FFFFFF;
  margin-top: 14rpx;
}
.record .list {
  border-radius: 12rpx;
  background: #fff;
  margin-top: -40rpx;
  width: 720rpx;
  margin-left: 15rpx;
}
.record .list .item {
  padding: 38rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.record .list .item .avatar {
  width: 64rpx;
  height: 64rpx;
  margin-right: 24rpx;
  border-radius: 100%;
}
.record .list .item .name {
  font-size: 30rpx;
  color: #222222;
  flex: 1;
}
.record .list .item .time {
  font-size: 28rpx;
  color: #999;
}

