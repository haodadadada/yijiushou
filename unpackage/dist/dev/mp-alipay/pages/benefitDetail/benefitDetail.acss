 .u-navbar__content__title {
  color: #fff !important;
}
.banner {
  height: 438rpx;
  width: 750rpx;
}
.section {
  position: relative;
  z-index: 100;
  margin-top: -24rpx;
  border-radius: 24rpx 24rpx 0px 0px;
  background: #fff;
}
.section .item {
  margin: 30rpx 0;
  font-size: 30rpx;
  font-weight: 400;
  color: #474747;
}
.section .list {
  padding: 18rpx;
}
.section .list .card {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}
.section .list .card image {
  width: 332rpx;
  height: 204rpx;
  background: #111111;
  border-radius: 12rpx;
}
.section .list .card .text-1 {
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  padding-left: 12rpx;
  left: 0;
  right: 0;
  bottom: 0;
  line-height: 44rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 0px 0px 12rpx 12rpx;
  box-sizing: border-box;
}
.section .list .item {
  display: flex;
  background: #FFFFFF;
  box-shadow: 0px 4rpx 12rpx 2rpx rgba(96, 202, 130, 0.29);
  border-radius: 12rpx;
  margin-bottom: 22rpx;
  padding: 8rpx;
}
.section .list .item .logo {
  width: 172rpx;
  height: 172rpx;
  min-width: 172rpx;
}

