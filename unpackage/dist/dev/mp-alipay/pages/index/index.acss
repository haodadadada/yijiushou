.container {
  background: url(https://youjin.phpcaff.cn/uploads/20220503/2d46dd07ab6430295e32156d08fbe588.png) no-repeat;
  background-size: 100% auto;
  overflow-x: hidden;
}
.container .navbar {
  font-size: 34rpx;
  font-weight: 500;
  color: #ffffff;
  padding: 20rpx 30rpx;
  padding-top: calc(25px + 50rpx);
}
.container .navbar image {
  width: 250rpx;
  height: 64rpx;
}
.container .location {
  padding-left: 30rpx;
}
.container .location image {
  width: 58rpx;
  height: 66rpx;
}
.container .main-banner {
  color: #fff;
  display: flex;
  justify-content: center;
  height: 480rpx;
}
.container .main-banner .left {
  padding-top: 30rpx;
  flex: 1;
  text-align: center;
}
.container .main-banner .left .title {
  font-size: 58rpx;
  font-weight: 400;
  color: #141414;
}
.container .main-banner .left .text-1 image {
  width: 36rpx;
  height: 36rpx;
}
.container .main-banner .left .text-2 {
  font-size: 26rpx;
  font-weight: 400;
  color: #ffffff;
}
.container .main-banner .left .btn-1 {
  width: 270rpx;
  height: 82rpx;
  line-height: 82rpx;
  margin: 50rpx auto;
}
.container .main-banner .left .btn-1 image {
  width: 270rpx;
  height: 82rpx;
}
.container .main-banner .right {
  min-width: 360rpx;
  position: relative;
}
.container .main-banner .right .ball {
  min-width: 360rpx;
  min-height: 360rpx;
  width: 360rpx;
  height: 360rpx;
  -webkit-animation: turn 10s linear infinite;
          animation: turn 10s linear infinite;
}
.container .main-banner .right .hand {
  position: absolute;
  width: 380rpx;
  height: 200rpx;
  bottom: 4rpx;
  left: -6px;
}
@-webkit-keyframes turn {
0% {
    -webkit-transform: rotate(0deg);
}
25% {
    -webkit-transform: rotate(90deg);
}
50% {
    -webkit-transform: rotate(180deg);
}
75% {
    -webkit-transform: rotate(270deg);
}
100% {
    -webkit-transform: rotate(360deg);
}
}
@keyframes turn {
0% {
    -webkit-transform: rotate(0deg);
}
25% {
    -webkit-transform: rotate(90deg);
}
50% {
    -webkit-transform: rotate(180deg);
}
75% {
    -webkit-transform: rotate(270deg);
}
100% {
    -webkit-transform: rotate(360deg);
}
}
.container .menu {
  margin-top: 40rpx;
  display: grid;
  text-align: center;
  grid-template-columns: repeat(4, 1fr);
  background: #f8f8f8;
}
.container .menu .item image {
  width: 96rpx;
  height: 107rpx;
}
.container .menu .item .title {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
}
.container .tools {
  border-radius: 16rpx;
  padding: 30rpx 30rpx 20rpx;
  background: #f8f8f8;
}
.container .tools .title {
  font-size: 36rpx;
  font-weight: 500;
  color: #222222;
}
.container .tools .card {
  width: 335rpx;
  height: 160rpx;
  background-image: linear-gradient(90deg, #fff, #f7fff3, #fff);
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.container .tools .card .title-1 {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}
.container .tools .card .text {
  font-size: 24rpx;
  color: #AAAAAA;
  letter-spacing: 2rpx;
  margin-top: 10rpx;
}
.container .tools .card image {
  width: 75rpx;
  height: 75rpx;
}
.swiper {
  height: 42rpx;
  padding: 20rpx;
  background: #fff;
}
.swiper .swiper-item {
  display: flex;
  align-items: center;
}
.swiper .swiper-item .title {
  font-size: 26rpx;
  color: #111;
  margin-right: 20rpx;
}
.swiper .swiper-item .avatar {
  position: relative !important;
  right: 0 !important;
  top: 0 !important;
  width: 42rpx !important;
  height: 42rpx !important;
  margin-top: 0 !important;
  border-radius: 20rpx;
}
.swiper .swiper-item .size-18 {
  color: #02c99a;
  margin-left: 10rpx;
  margin-top: 0 !important;
  font-size: 26rpx;
  color: #999999;
}

