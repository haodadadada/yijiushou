.container {
  padding: 22rpx 14rpx;
}
.container .icon {
  width: 100rpx;
  height: 100rpx;
}
.container .badge {
  font-size: 24rpx;
  font-weight: 400;
  color: #0F7B32;
  line-height: 44rpx;
  background: #EBFFF1;
  border-radius: 22rpx;
  padding: 0 20rpx;
}
.container .icon-1 {
  min-width: 30rpx;
  width: 30rpx;
  height: 30rpx;
}
.container .avatar {
  width: 68rpx;
  height: 68rpx;
}
.btn {
  width: calc(100% - 20rpx);
  line-height: 92rpx;
}
.cancel-btn {
  background: #FFF5F5;
  border: 1rpx solid #FF8E8E;
  color: #EF2626;
}
.chat-btn {
  background: #E7FFEE;
  border: 1rpx solid #9DEDB7;
  color: #0F7B32;
}
.popup {
  padding: 0 30rpx;
}
.popup .header {
  padding: 32rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #222222;
  border-bottom: 1rpx solid #EFEFEF;
}
.popup .body .u-input {
  background: #F5F5F5;
  border: 0;
}
.popup .body .list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 30rpx;
}
.popup .body .list .item {
  padding: 0 40rpx;
  font-size: 28rpx;
  color: #606060;
  line-height: 66rpx;
  background: #FFFFFF;
  border-radius: 66rpx;
  border: 1rpx solid #E2E2E2;
  margin-bottom: 30rpx;
  margin-right: 20rpx;
}
.popup .footer {
  text-align: center;
  display: flex;
  justify-content: flex-end;
  padding-bottom: 28rpx;
}
.popup .footer .btn-1 {
  font-size: 30rpx;
  color: #FFFFFF;
  line-height: 74rpx;
  width: 198rpx;
  background: #3BB061;
  border-radius: 12rpx;
}
.popup .footer .btn-2 {
  font-size: 30rpx;
  color: #222222;
  line-height: 74rpx;
  width: 198rpx;
  background: #DADADA;
  border-radius: 12rpx;
  margin-left: 38rpx;
}
.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-radius: 18rpx;
  background: #fff;
  margin-top: 14rpx;
}
.user-info .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 100%;
}
.user-info .name {
  font-size: 32rpx;
  font-weight: 500;
}
.user-info .text {
  font-size: 24rpx;
  color: #999;
}
.user-info .icon {
  width: 50rpx;
  height: 50rpx;
}

