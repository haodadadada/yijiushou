{
	"easycom": {
		"^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"mp-alipay": {
					"transparentTitle": "always",
					"titlePenetrate": "YES"
				}
			}
		}, {
			"path": "pages/order/order",
			"style": {
				"navigationBarTitleText": "订单",
				"enablePullDownRefresh": true,
				"navigationBarBackgroundColor": "#34cd99"
			}

		}, {
			"path": "pages/placeOrder/placeOrder",
			"style": {
				"navigationBarTitleText": "预约下单",
				"enablePullDownRefresh": false,
				"navigationBarBackgroundColor": "#34cd99"
			}

		}, {
			"path": "pages/user/user",
			"style": {
				"navigationStyle": "custom",
				"mp-alipay": {
					"transparentTitle": "always",
					"titlePenetrate": "YES"
				}
			}

		}, {
			"path": "pages/order-detail/order-detail",
			"style": {
				"navigationBarTitleText": "订单详情",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/address/address",
			"style": {
				"navigationBarTitleText": "地址管理",
				"enablePullDownRefresh": true
			}

		}, {
			"path": "pages/guidePrice/guidePrice",
			"style": {
				"navigationBarTitleText": "今日上门价",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/addAddress/addAddress",
			"style": {
				"navigationBarTitleText": "添加地址",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/editUser/editUser",
			"style": {
				"navigationBarTitleText": "个人信息",
				"enablePullDownRefresh": false
			}

		},{
            "path" : "pages/booking/booking",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "预约",
                "enablePullDownRefresh": false
            }
            
        },{
			"path": "pages/about/about",
			"style": {
				"navigationBarTitleText": "关于我们",
				"enablePullDownRefresh": false
			}
		},{
			"path": "pages/bind/bind",
			"style": {
				"navigationBarTitleText": "账户绑定",
				"enablePullDownRefresh": false
			}
		}
        ,{
            "path" : "pages/bind-detail/bind-detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "绑定成功",
                "enablePullDownRefresh": false
            }
        }
    ],
	"tabBar": {
		"color": "#606060",
		"selectedColor": "#3BB061",
		"borderStyle": "white",
		"backgroundColor": "#fff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/new7.png",
				"selectedIconPath": "static/new8.png",
				"text": "首页"
			}, {
				"pagePath": "pages/placeOrder/placeOrder",
				"iconPath": "static/new9.png",
				"selectedIconPath": "static/new10.png",
				"text": "预约"
			}, 
			{
				"pagePath": "pages/order/order",
				"iconPath": "static/new11.png",
				"selectedIconPath": "static/new12.png",
				"text": "订单"
			},
			{
				"pagePath": "pages/user/user",
				"iconPath": "static/new13.png",
				"selectedIconPath": "static/new14.png",
				"text": "我的"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#F8F8F8"
	}
}
